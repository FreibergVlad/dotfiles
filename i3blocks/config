command=~/.config/i3blocks/$BLOCK_NAME
color=#f3f4f5
separator_block_width=15
markup=none

# Volume indicator
[volume]
interval=once
signal=10

# Battery indicator
[battery]
interval=30

# Keyboard layout indicator
[keyboard]
label= 
command=bash -c 'xkb-switch;xkb-switch -W'
interval=persist

# Date and time
[time]
label= 
command=date +"%a, %d %b %H:%M"
interval=1
